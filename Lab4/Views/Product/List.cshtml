@{
    ViewData["Title"] = "Products";
}

<h1>Products - @ViewBag.Category</h1>

@if (ViewBag.Id != null)
{
    <p>Showing product with ID: @ViewBag.Id</p>
}
else
{
    <p>Showing all products in category: @ViewBag.Category</p>
}

<div>
    <h2>Sample Products</h2>
    <ul>
        <li><a asp-controller="Product" asp-action="Details" asp-route-id="1">Product 1</a></li>
        <li><a asp-controller="Product" asp-action="Details" asp-route-id="2">Product 2</a></li>
        <li><a asp-controller="Product" asp-action="Details" asp-route-id="3">Product 3</a></li>
    </ul>
</div> 